<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	   		   http://www.springframework.org/schema/context
	   		   http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <bean id="ServiceList" class="server.ServiceList">
        <property name="listServices">
            <list>
                <ref bean="ClientListenerService" />
                <ref bean="CacheService" />
            </list>
        </property>

    </bean>




    <bean id="ClientListenerService" class="socket.ClientListenerService">
        <property name="name" value="RestService" />
        <property name="port" value="10003" />

    </bean>

    <bean id="CacheService" class="offheapcacheserver.CacheServiceImpl">
        <property name="name" value="CacheService" />
        <property name="manager" ref ="Manager" />

    </bean>

    <bean id="Manager" class="offheapcacheserver.PersistenceManagerImpl">
        <property name="dirName" value="/tmp/data/server1/" />

    </bean>

</beans>

